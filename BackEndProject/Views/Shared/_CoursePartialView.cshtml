@model List<Course>

            @foreach (Course course in Model)
            {
                <div style="cursor:pointer;margin-top:40px" class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course">
                        <div class="course-img">
                            <a asp-controller="course" asp-action="details" asp-route-id="@course.Id">
                                <img src="~/assets/img/course/@course.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a asp-controller="course" asp-action="details" asp-route-id="@course.Id">@course.Name.ToUpper()</a></h3>
                            @if (course.Description == null)
                            {
                                <p>@course.Description</p>
                            }
                            else if (course.Description.Length > 120)
                            {
                                <p>@course.Description.Substring(0, 120) ...</p>
                            }
                            else
                            {
                                <p>@course.Description</p>
                            }
                            <a asp-controller="course" asp-action="details" asp-route-id="@course.Id" class="default-btn">read more</a>
                        </div>
                    </div>
                </div>
            }
        
