@model List<Event>
@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
}
@if (controller == "Home")
{
    @foreach (Event item in Model)
    {
        <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="single-event mb-35">
                <div class="event-img">
                    <a asp-controller="event" asp-action="details" asp-route-id="@item.Id"><img style="width:280px" src="~/assets/img/event/@item.Image" alt="event"></a>
                </div>
                <div class="event-content text-left">
                    <h3> @item.Date.ToString("dd MMMM yyyy")</h3>
                    <h4><a asp-controller="event" asp-action="details" asp-route-id="@item.Id"> @item.Name</a></h4>
                    <ul>
                        <li><i class="fa fa-clock-o"></i> @item.StartDate.ToString("hh:mm tt") - @item.EndDate.ToString("hh:mm tt")</li>
                        <li><i class="fa fa-map-marker"></i> @item.Venue</li>
                    </ul>
                    <div class="event-content-right">
                        <a asp-controller="event" asp-action="details" asp-route-id="@item.Id" class="default-btn" >join now</a>
                    </div>
                </div>
            </div>
        </div>

    }
}
else if (controller == "Event")
{
    @foreach (Event item in Model)
    {
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="single-event mb-60">
                <div class="event-img">
                    <a asp-controller="event" asp-action="details" asp-route-id="@item.Id">
                        <img src="~/assets/img/event/@item.Image" alt="event">
                        <div class="course-hover">
                            <i class="fa fa-link"></i>
                        </div>
                    </a>
                    <div class="event-date">
                        <h3>@item.Date.ToString("dd MMMM").Substring(0, 6)</h3>
                    </div>
                </div>
                <div class="event-content text-left">
                    <h4><a asp-controller="event" asp-action="details" asp-route-id="@item.Id">@item.Name</a></h4>
                    <ul>
                        <li><span>time:</span> @item.StartDate.ToString("hh:mm tt") - @item.EndDate.ToString("hh:mm tt")</li>
                        <li><span>venue</span> @item.Venue</li>
                    </ul>
                    <div class="event-content-right">
                        <a asp-controller="event" asp-action="details" asp-route-id="@item.Id" class="default-btn" >join now</a>
                    </div>
                </div>
            </div>
        </div>
    }
}


