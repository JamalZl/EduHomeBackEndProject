@{ ViewData["Title"] = "Create"; }
@model Blog

<div class="container mt-3">
    <h2>Create blog section</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Blog image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Blog title</label>
            <input asp-for="@Model.Title" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Blog description</label>
            <input asp-for="@Model.Description" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div>
            <label asp-for="@Model.Date" class="form-label">Publish date</label>
            <input asp-for="@Model.Date" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.Date"></span>
        </div>
        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="blog" asp-action="index" class="btn btn-dark btn-icon-text mx-3">
                Go to back
            </a>
        </div>
    </form>

</div>

