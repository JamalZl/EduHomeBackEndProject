@{ ViewData["Title"] = "Create"; }
@model Speaker

<div class="container mt-3">
    <h2>Create speaker section</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mt-3">
            <h4>Current speaker image</h4>
            <img style="width:220px;height:220px;object-fit:contain" src="~/assets/img/event/@Model.Image" alt="speaker image" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Speaker image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Speaker name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PositionId" class="form-label">Select Position</label>
            <select asp-for="@Model.PositionId" class="form-select" asp-items="@(new SelectList(ViewBag.Positions,"Id","Name"))">
                <option value="0">Select Position</option>
            </select>
            <span style="display:inline-block; margin-top:15px" class="mt-2 text text-danger" asp-validation-for="@Model.PositionId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CompanyId" class="form-label">Select company</label>
            <select asp-for="@Model.CompanyId" class="form-select" asp-items="@(new SelectList(ViewBag.Companies,"Id","Name"))">
                <option value="0">Select Company</option>
            </select>
            <span style="display:inline-block; margin-top:15px" class="mt-2 text text-danger" asp-validation-for="@Model.CompanyId"></span>
        </div>
        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="speaker" asp-action="index" class="btn btn-dark btn-icon-text mx-3">
                Go to back
            </a>
        </div>
    </form>

</div>

