@model List<Comment>
@{ ViewData["Title"] = "Comments"; }
<div class="container">
    <table class="mt-3 table table-dark">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Text
                </th>
                <th>
                    Created Date
                </th>
                <th>
                    Status
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
<tr>
    <td>@comment.Id</td>
    <td>@comment.AppUser.UserName</td>
    @if (@comment.Text.Length < 50)
    {
<td>@comment.Text</td>
 }
else
{
<td data-toggle="tooltip" data-placement="bottom" title="@comment.Text">@comment.Text.Substring(0, 47) ...</td>
}
    <td>@comment.CreatedTime.ToString("dd MMMM yyyy HH:m")</td>
    <td>@comment.IsAccess</td>
    <td>
        @if (comment.IsAccess)
        {
<a asp-controller="course" asp-action="CStatusChange" asp-route-id="@comment.Id" class="btn btn-danger btn-icon-text">
    <i class="mdi mdi-alert btn-icon-prepend"></i>
    Reject
</a> }
else
{
<a asp-controller="flower" asp-action="CStatusChange" asp-route-id="@comment.Id" class="btn btn-success btn-icon-text">
    <i class="mdi mdi-file-check btn-icon-append"></i>
    Accept
</a>}
    </td>
</tr>
       }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>
    $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })</script>

}

