@{ ViewData["Title"] = "Create"; }
@model Course

<div class="container mt-3">
    <h2>Create slider section</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageFormFile" class="form-label">Enter image</label>
            <input asp-for="@Model.ImageFormFile" accept="image/*" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.ImageFormFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Enter Name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Enter description</label>
            <input asp-for="@Model.Description" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.About" class="form-label">Enter about</label>
            <input asp-for="@Model.About" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.About"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.Apply" class="form-label">Enter apply</label>
            <input asp-for="@Model.Apply" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.Apply"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.Certification" class="form-label">Enter Certification</label>
            <input asp-for="@Model.Certification" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.Certification"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CategoryId" class="form-label">Select Category</label>
            <select asp-for="@Model.CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
                <option value="0">Select category</option>
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CategoryId"></span>
        </div>
        <div class="mb-3 mt-3">
            <label asp-for="@Model.TagIds" class="form-label">Select Tags</label>
            <select asp-for="@Model.TagIds" class="form-select" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))">
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.TagIds"></span>
        </div>
        <h3 style="margin:15px;">
            Course Features
        </h3>
        <div class="mt-3">
            <label asp-for="@Model.CourseFeatures.FirstOrDefault().StartTime" class="form-label">Enter start date</label>
            <input asp-for="@Model.CourseFeatures.FirstOrDefault().StartTime" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.CourseFeatures.FirstOrDefault().StartTime"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.CourseFeatures.FirstOrDefault().Duration" class="form-label">Enter duration</label>
            <input asp-for="@Model.CourseFeatures.FirstOrDefault().Duration" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.CourseFeatures.FirstOrDefault().Duration"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.CourseFeatures.FirstOrDefault().SkillLevel" class="form-label">Enter skill level</label>
            <input asp-for="@Model.CourseFeatures.FirstOrDefault().SkillLevel" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.CourseFeatures.FirstOrDefault().SkillLevel"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.CourseFeatures.FirstOrDefault().Language" class="form-label">Enter Language</label>
            <input asp-for="@Model.CourseFeatures.FirstOrDefault().Language" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.CourseFeatures.FirstOrDefault().Language"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.CourseFeatures.FirstOrDefault().StudentCount" class="form-label">Enter student count</label>
            <input asp-for="@Model.CourseFeatures.FirstOrDefault().StudentCount" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.CourseFeatures.FirstOrDefault().StudentCount"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.CourseFeatures.FirstOrDefault().CourseFee" class="form-label">Enter course fee</label>
            <input asp-for="@Model.CourseFeatures.FirstOrDefault().CourseFee" class="form-control">
            <span class="mt-4 text text-danger" asp-validation-for="@Model.CourseFeatures.FirstOrDefault().CourseFee"></span>
        </div>
        <div class="d-flex mt-4 mb-5">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="course" asp-action="index" class="btn btn-dark btn-icon-text mx-3">
                Go to back
            </a>
        </div>
    </form>

</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
