@model Setting
@{ ViewData["Title"] = "Edit"; }

<div class="container mt-3">
    <h2>Edit setting section</h2>
    <div class="mt-5">
        <h4>Current Logo</h4>
        <img style="width:150px;height:150px;object-fit:contain" src="~/assets/img/logo/@Model.SiteLogo" alt="Logo image" />
    </div>
    <div class="mt-3">
        <h4>Current about image</h4>
        <img style="width:150px;height:150px;object-fit:contain" src="~/assets/img/about/@Model.AboutImage" alt="About image" />
    </div>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageLogoFile" class="form-label">Select logo</label>
            <input asp-for="@Model.ImageLogoFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageLogoFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageAboutFile" class="form-label">Enter about image</label>
            <input asp-for="@Model.ImageAboutFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageAboutFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.HeaderNumber" class="form-label">Enter number</label>
            <input asp-for="@Model.HeaderNumber" class="form-control">
            <span class="mt-5 text text-danger" asp-validation-for="@Model.HeaderNumber"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.SearchIcon" class="form-label">Enter search icon</label>
            <input asp-for="@Model.SearchIcon" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.SearchIcon"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FooterDescription" class="form-label">Enter footer description</label>
            <input asp-for="@Model.FooterDescription" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FooterDescription"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Address" class="form-label">Enter address</label>
            <input asp-for="@Model.Address" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Address"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FooterNumber1" class="form-label">Enter number</label>
            <input asp-for="@Model.FooterNumber1" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FooterNumber1"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FooterNumber2" class="form-label">Enter number </label>
            <input asp-for="@Model.FooterNumber2" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FooterNumber2"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FooterMail" class="form-label">Enter mail</label>
            <input asp-for="@Model.FooterMail" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FooterMail"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FooterWebsite" class="form-label">Enter website</label>
            <input asp-for="@Model.FooterWebsite" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FooterWebsite"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FooterHasTechUrl" class="form-label">Enter HasTech link</label>
            <input asp-for="@Model.FooterHasTechUrl" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FooterHasTechUrl"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.AboutTitle" class="form-label">Enter about title</label>
            <input asp-for="@Model.AboutTitle" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.AboutTitle"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.AboutDescription" class="form-label">Enter about description</label>
            <input asp-for="@Model.AboutDescription" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.AboutDescription"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.AboutViewUrl" class="form-label">Enter view text</label>
            <input asp-for="@Model.AboutViewUrl" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.AboutViewUrl"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.VideoTourUrl" class="form-label">Enter Video Tour link</label>
            <input asp-for="@Model.VideoTourUrl" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.VideoTourUrl"></span>
        </div>
        @foreach (var item in Model.FooterSocials)
        {
            <div class="mb-3">
                <label asp-for="@item.Logo" class="form-label">Enter social media tag</label>
                <input asp-for="@item.Logo" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@item.Logo"></span>
            </div>
                <div class="mb-3">
                    <label asp-for="@item.LogoUrl" class="form-label">Enter social media account link</label>
                    <input asp-for="@item.LogoUrl" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@item.LogoUrl"></span>
                </div>
                }
        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="setting" asp-action="index" class="btn btn-dark btn-icon-text mx-3">
                Go to back
            </a>
        </div>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}


