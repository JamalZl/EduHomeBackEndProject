@{ ViewData["Title"] = "Create"; }
@model NoticeBoard

<div class="container mt-3">
    <h2>Edit notice board</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Enter notice board description</label>
            <input asp-for="@Model.Description"  class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Date" class="form-label">Enter publish date</label>
            <input asp-for="@Model.Date" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Date"></span>
        </div>
        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="noticeboard" asp-action="index" class="btn btn-dark btn-icon-text mx-3">
                Go to back
            </a>
        </div>
    </form>
</div>

